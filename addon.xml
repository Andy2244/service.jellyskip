<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.jellyskip" name="Jellyskip" version="1.1.3" provider-name="Jalau">
	<requires>
        <import addon="xbmc.python" version="3.0.0"/>
	</requires>
	<extension point="xbmc.service" library="resources/lib/service.py"/>
	<extension point="xbmc.python.script" library="addon.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Interact with Jellyfin Media Segments</summary>
		<description lang="en">Skip Jellyfin media segements with the click of a button</description>
		<license>GNU General Public License, v2</license>
		<language></language>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
		</assets>
		<news>v1.1.3: Add 3s debounce after seek, fix seek-back detection. v1.1.1: Open settings on addon select</news>
	</extension>
</addon>
